{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "camelcase": "off",
        "no-unused-vars": "off",
        "indent": ["error", 4],
        "require-jsdoc" : 0,
        "max-len": ["error", {
            "ignoreComments": true,
            "ignoreTrailingComments": true
        }],
        "linebreak-style": ["error", "windows"]
    }
}
